{% set title = 'home.title'|trans %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-8 col-md-10 mx-auto">
        {% for rule in rules %}
            <div class="post-preview">
                <a href="{{ path("grammar-rule", { "id" : rule.id, "rule" : rule.name, "_locale" : app.request.locale }) }}">
                    <h2 class="post-title">
                        {{ rule.name }}
                    </h2>
                    <h3 class="post-subtitle">
                        {% if rule.examples|length > 0 %}
                            {{ rule.examples.first.phrase }}
                        {% else %}
                            Aucun example
                        {% endif %}
                    </h3>
                </a>
                <p class="post-meta">Posted by
                    <a href="#">Start Bootstrap</a>
                    on {{ rule.createdAt|date('Y-m-d H:i:s') }}</p>
            </div>
            <hr>
        {% endfor %}
        <!-- Pager -->
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="{{ path("grammar-list") }}">Older Posts &rarr;</a>
        </div>
    </div>
{% endblock %}
